            <ImageBrush ImageSource="background2.jpg"/>
        </Grid.Background>
        <ProgressBar x:Name="pbar" HorizontalAlignment="Left" Height="31" Margin="25,333,0,0" VerticalAlignment="Top" Width="410"  Minimum="0" Maximum="100" Value="1"/>
