        <Label x:Name="produit" Content="ISAO-LE" HorizontalAlignment="Left" Height="38" Margin="25,26,0,0" VerticalAlignment="Top" Width="173" FontSize="24"/>
        <Label x:Name="label" Content="2019" HorizontalAlignment="Left" Margin="688,31,0,0" VerticalAlignment="Top" FontFamily="Rockwell" FontSize="22"/>
        <Label x:Name="label1" Content="V0.0.1" HorizontalAlignment="Left" Margin="688,74,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.414,0.051" FontSize="18"/>
        <Button x:Name="bt_connect" Content="Connexion" HorizontalAlignment="Left" Margin="286,288,0,0" VerticalAlignment="Top" Width="181" Height="38" Click="Bt_ConnectOnClick" Visibility="Hidden"/>
        <Label x:Name="label2" Content="© Careca Services 2013-2019" HorizontalAlignment="Left" Margin="25,385,0,0" VerticalAlignment="Top" Width="135"/>

    </Grid>
</Window>
